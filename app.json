{
  "expo": {
    "name": "LiveTranslate",
    "slug": "live-translate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "livetranslate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.livetranslate.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "LiveTranslate needs access to your microphone to record and transcribe speech in real-time."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.livetranslate.app",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "LiveTranslate needs access to your microphone to record and transcribe speech in real-time."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
